@model Montescc.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
    Layout = null;
}

<section id="loginForm" style="display: block; margin: 0 auto; width: 275px;">
@*<h2>Utilice una cuenta local para iniciar sesión.</h2>*@
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Inicio de sesión</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            @*<li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>*@
        </ol>
        <input type="submit" value="Iniciar sesión" />
    </fieldset>
    @*<p>
        @Html.ActionLink("Regístrese", "Register") si no tiene ninguna cuenta.
    </p>*@
}
</section>

