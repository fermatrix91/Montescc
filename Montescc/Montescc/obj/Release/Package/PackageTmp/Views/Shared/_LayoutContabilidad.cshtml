<!DOCTYPE HTML STYLE="zoom: reset;">

<html lang="es"
      oncontextmenu="return false">
<head>
    <title>Lecciones GRATIS de Contabilidad</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Lecciones de contabilidad gratis - Teoría y práctica - Miles de ejercicios básicos - Principales reportes contables; Balance General, Estado de Resultados, Conciliación Bancaria - Normas internacionales de contabilidad." />
    <meta name="keywords" content="Contabilidad, Contabilidad Gratis ,Balance General, Estado de Resultados, Conciliación Bancaria, Normas internacionales de contabilidad" />

    <script src="~/Scripts/jquery-2.2.3.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/menu/stylesMenu.css" rel="stylesheet" />
    <link href="~/Content/app.css" rel="stylesheet" />
    <script src="~/Content/menu/scriptMenu.js"></script>

    @Scripts.Render("/Scripts/bloquear.js")
</head>

<body onkeydown="checkKey(event)"
      oncontextmenu="return false">

    <div id="contenedorSitio" class="anchuraContenedor bordeSitio" style="background:white; position: absolute;">
        <header id="menuSuperior" class="anchuraContenedor navbar-fixed-top" style="border-bottom: 2px solid rgb(212, 81, 81);">
            <article>
                <div id='cssmenu' style="border-bottom: 2px solid rgb(212, 81, 81);">
                    <ul>
                        <li><a href='/Home/Index'>Inicio</a></li>
                        <li id="cuadroInglesEspanol" style="z-index:1000;"><a href='/Curso/Ingles'>English - Español</a></li>
                        <li id="cuadroAjedrez"><a href='/Curso/Ajedrez'>Ajedrez</a></li>
                        <li id="cuadroWeb"><a href='/Curso/Web'>Web</a></li>
                        <li id="cuadroContabilidad"><a href='/Curso/Contabilidad'>Contabilidad</a></li>
                        <li><button id="abreFormulario" style="background-color: #333333; border: none; border-style: none;" data-toggle="modal" data-target="#myModal">Contáctanos <span class="glyphicon glyphicon-send"></span></button></li>
                    </ul>
                </div>
            </article>
        </header>

        <section>
            <!-- oncontextmenu="return false"> -->
            <a href="#" class="scrollup">Scroll</a>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </section>

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Contáctanos</h4>
                    </div>
                    <form id="formCorreo" action="/Home/CorreoContactanos" method="post">
                        <div class="modal-body">
                            <p>Tu Correo Electrónico:</p>
                            <input placeholder="Email ej: usuario@dominio.com" id="correoContacto" name="correoContacto" type="email" class="form-control" />
                            <p>Mensaje:</p>
                            <textarea rows="3" placeholder="Contenido del mensaje" id="contenidoContacto" name="contenidoContacto" class="form-control"></textarea>
                        </div>
                        <div class="modal-footer">
                            <input id="botonContactanos" type="submit" class="btn btn-success" data-dismiss="modal" value="Enviar" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width: 100%;">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" style="margin-top: -10px;"><span style="font-weight: bolder; font-size: 40px;" aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <img src="" class="imagepreview" style="width: 100%;">
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    @*@Scripts.Render("~/bundles/jquery")*@
    @RenderSection("scripts", required: false)

    <script type="application/ld+json">
        {
        "@@context": "http://schema.org",
        "@@type": "Organization",
        "url": "http://www.montes.cc",
        "contactPoint": [{
        "@@type": "ContactPoint",
        "telephone": "+505-8-402-4092",
        "contactType": "customer service"
        }]
        }
    </script>
    <script src="~/Scripts/JsMontes.js"></script>
</body>
</html>